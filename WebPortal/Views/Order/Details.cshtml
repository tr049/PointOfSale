@model Entities.OrderDTO

@{
    ViewBag.Title = "Order";
    ViewBag.SubTitle = "Detail of Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h2>Order Detail</h2>
    <hr />
    <h4>Order Information</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Discount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Discount)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    <h4>Customer Information</h4>
    <dl class="dl-horizontal">
        <dt>
            CNIC
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.CustomerCNIC)
        </dd>

        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.CustomerName)
        </dd>

        <dt>
            Phone Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.CustomerPhoneNumber)
        </dd>
    </dl>
    <h4>Cart Information</h4>
    <table class="table table-bordered table-hover table-striped" cellspacing="0">
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>
                Action
            </th>
        </tr>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", "OrderDetail", new { id = item.OrderDetailId },null) |
                    @Html.ActionLink("Delete", "Delete", "OrderDetail", new { id = item.OrderDetailId }, null)
                </td>
            </tr>
        }

</table>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.OrderId  }) |
    @Html.ActionLink("Back to List", "Index")
</p>
