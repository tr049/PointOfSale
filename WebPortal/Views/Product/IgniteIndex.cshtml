@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Infragistics.Web.Mvc;
@model IQueryable<WebPortal.RouteConfig>

@section Scripts {
}
     <script type="text/javascript" src="@Url.Content("~/Scripts/Infragistics/js/infragistics.loader.js")"></script>  

@(Html.Infragistics()
        .Loader()
        .ScriptPath(Url.Content("~/Scripts/Infragistics/js"))
        .CssPath(Url.Content("~/Content/Infragistics/css"))
        .Theme("infragistics")
        .Render())
@(Html.Infragistics()
    .Grid(Model)
    .ID("igGrid")
    .Width("600px")
    .Height("600px")
    .AutoGenerateColumns(false)
    .PrimaryKey("")
    .UpdateUrl(Url.Action("SaveData"))
    .Columns(column =>
    {
    })
    .Features(f => 
    {  
		f.ColumnMoving()
			.Mode(MovingMode.Immediate);
		f.Filtering()
			.Mode(FilterMode.Advanced);
		f.Hiding();
		f.Paging()
			.PageSize(25);
		f.Responsive();
		f.Selection()
			.Mode(SelectionMode.Row);
		f.Updating()
			.EnableAddRow(true)
			.EnableDeleteRow(true)
			.EditMode(GridEditMode.Cell);
    })
    .DataBind()
    .Render())
